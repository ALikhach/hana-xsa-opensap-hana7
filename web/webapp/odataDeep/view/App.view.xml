<mvc:View controllerName="sap.shineNext.odataDeep.controller.App" xmlns="sap.m" xmlns:f="sap.f" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" height="100%">
	<f:ShellBar title="{i18n>appTitle}" homeIcon="../images/sap_18.png" showCopilot="true" showSearch="true" showNotifications="true"
		showProductSwitcher="true">
		<f:profile>
			<f:Avatar initials="{config>/UserName}" press=".onAvatar"/>
		</f:profile>
	</f:ShellBar>
	<Panel headerText="New Business Partner Details" expandable="true" expanded="true">
		<List id="panel" width="600px">
			<InputListItem id="itemName" label="Company Name">
				<Input id="cName" value="{/CompanyName}"/>
			</InputListItem>
			<InputListItem id="itemCity" label="City">
				<Input id="city" value="{/City}"/>
			</InputListItem>
			<InputListItem id="itemEmail" label="Email">
				<Input id="email" value="{/Email}"/>
			</InputListItem>
		</List>
		<Button id="btnCreate" text="Create Record" press="callCreateService"/>
	</Panel>
</mvc:View>