<mvc:View controllerName="sap.openSAP.odataDeep.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Panel headerText="New Business Partner Details" expandable="true" expanded="true">
		<List id="panel" width="600px">
			<InputListItem id="itemName" label="Company Name">
				<Input id="cName" value="{/CompanyName}"/>
			</InputListItem>
			<InputListItem id="itemCity" label="City">
				<Input id="city" value="{/City}"/>
			</InputListItem>
			<InputListItem id="itemEmail" label="Email">
				<Input id="email" value="{/Email}"/>
			</InputListItem>
		</List>
		<Button id="btnCreate" text="Create Record" press="callCreateService"/>
	</Panel>
</mvc:View>